{
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.semanticHighlighting.enabled": true,
        "editor.suggest.insertMode": "replace",
        "editor.wordBasedSuggestions": "off"
    },
    "[makefile]": {
        "editor.insertSpaces": false
    },
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true
    },
    "autoDocstring.generateDocstringOnEnter": false,
    "autoDocstring.startOnNewLine": true,
    "breadcrumbs.icons": false,
    "breadcrumbs.symbolPath": "off",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 4, BreakBeforeBraces: Stroustrup, ColumnLimit: 0, SpacesBeforeTrailingComments: 2, PointerAlignment: Right }",
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "bugprone-*",
        "cppcoreguidelines-*",
        "modernize-*",
        "performance-*",
        "readability-*"
    ],
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.doxygen.generatedStyle": "/**",
    "C_Cpp.doxygen.generateOnType": false,
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.parameterNames.suppressWhenArgumentContainsName": false,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "newLine",
    "C_Cpp.vcpkg.enabled": false,
    "chat.commandCenter.enabled": false,
    "chat.focusWindowOnConfirmation": false,
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.launchBehavior": "breakAndReuseTerminal",
    "cmake.options.advanced": {
        "cpack": {
            "statusBarVisibility": "icon"
        },
        "ctest": {
            "statusBarVisibility": "icon"
        },
        "kit": {
            "statusBarVisibility": "icon"
        },
        "workflow": {
            "statusBarVisibility": "hidden"
        }
    },
    "cmake.options.statusBarVisibility": "compact",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showConfigureWithDebuggerNotification": false,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.language": "en,en-US",
    "cSpell.useCustomDecorations": false,
    "cSpell.userWords": [
        "SFML"
    ],
    "css.format.spaceAroundSelectorSeparator": true,
    "debug.showVariableTypes": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "diffEditor.useInlineViewWhenSpaceIsLimited": false,
    "doxdocgen.c.factoryMethodText": "Create a {name} object.",
    "doxdocgen.c.getterText": "Get the {name} object.",
    "doxdocgen.c.setterText": "Set the {name} object.",
    "doxdocgen.cpp.ctorText": "Construct a new {name} object.",
    "doxdocgen.cpp.dtorText": "Destroy the {name} object.",
    "doxdocgen.cpp.tparamTemplate": "@tparam {param}(e.g., \"\").",
    "doxdocgen.generic.boolReturnsTrueFalse": false,
    "doxdocgen.generic.includeTypeAtReturn": false,
    "doxdocgen.generic.paramTemplate": "@param {param}(e.g., \"\").",
    "doxdocgen.generic.returnTemplate": "@return {type}(e.g., \"\").",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.accessibilitySupport": "off",
    "editor.codeActionsOnSave": {},
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 2,
    "editor.cursorWidth": 2,
    "editor.dragAndDrop": false,
    "editor.folding": false,
    "editor.fontFamily": "SF Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.fontWeight": "normal",
    "editor.formatOnSave": true,
    "editor.hover.above": false,
    "editor.inlayHints.fontSize": 9,
    "editor.inlayHints.padding": true,
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.padding.bottom": 10,
    "editor.padding.top": 10,
    "editor.quickSuggestions": {
        "comments": "off",
        "other": "on",
        "strings": "on"
    },
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        88
    ],
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.showFoldingControls": "never",
    "editor.stickyScroll.enabled": false,
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "explorer.autoOpenDroppedFile": false,
    "explorer.compactFolders": false,
    "explorer.confirmUndo": "verbose",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "files.autoSave": "afterDelay",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.openRepositoryInParentFolders": "never",
    "git.replaceTagsWhenPull": true,
    "gitblame.inlineMessageEnabled": true,
    "gitblame.inlineMessageFormat": "// ${author.name}: \"${commit.summary}\" (${time.ago})",
    "gitblame.inlineMessageMargin": 8,
    "gitblame.statusBarMessageClickAction": "Open git show",
    "gitblame.statusBarMessageFormat": "${author.name}: \"${commit.summary}\" (${time.ago})",
    "github.copilot.chat.localeOverride": "en",
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": true,
        "scminput": false
    },
    "github.copilot.nextEditSuggestions.enabled": false,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "html.format.wrapLineLength": 0,
    "javascript.preferences.quoteStyle": "double",
    "jupyter.askForKernelRestart": false,
    "jupyter.disableJupyterAutoStart": true,
    "jupyter.experiments.enabled": false,
    "jupyter.interactiveWindow.textEditor.autoAddNewCell": false,
    "jupyter.interactiveWindow.textEditor.autoMoveToNextCell": false,
    "less.format.spaceAroundSelectorSeparator": true,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.occurrencesHighlight.enabled": true,
    "notebook.cellFocusIndicator": "border",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "notebook.cellToolbarVisibility": "hover",
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll": "explicit",
        "notebook.source.organizeImports": "explicit"
    },
    "notebook.consolidatedOutputButton": false,
    "notebook.formatOnCellExecution": true,
    "notebook.formatOnSave.enabled": true,
    "notebook.insertFinalNewline": true,
    "notebook.lineNumbers": "on",
    "notebook.navigation.allowNavigateToSurroundingCells": false,
    "notebook.output.scrolling": true,
    "notebook.output.textLineLimit": 60,
    "notebook.output.wordWrap": true,
    "notebook.showFoldingControls": "always",
    "problems.showCurrentInStatus": true,
    "pyright.disableOrganizeImports": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": false,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingTypeStubs": "none"
    },
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "strict",
    "python.createEnvironment.trigger": "off",
    "python.experiments.enabled": false,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.executeInFileDir": true,
    "rainbow_csv.csv_lint_detect_trailing_spaces": true,
    "rainbow_csv.rbql_with_headers_by_default": true,
    "remote.autoForwardPorts": false,
    "ruff.lint.extendSelect": [
        "UP",
        "I",
        "COM812",
        "TID252"
    ],
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "settingsSync.ignoredSettings": [
        "editor.fontFamily",
        "editor.fontSize",
        "editor.inlayHints.fontSize",
        "editor.fontWeight",
        "terminal.integrated.fontFamily"
    ],
    "telemetry.telemetryLevel": "error",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.confirmOnKill": "never",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.enablePersistentSessions": true,
    "terminal.integrated.hideOnStartup": "whenEmpty",
    "terminal.integrated.stickyScroll.enabled": false,
    "terminal.integrated.tabs.showActions": "always",
    "typescript.preferences.quoteStyle": "double",
    "update.mode": "start",
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",
    "window.nativeTabs": true,
    "window.newWindowDimensions": "maximized",
    "window.restoreFullscreen": true,
    "window.restoreWindows": "all",
    "workbench.activityBar.location": "top",
    "workbench.colorCustomizations": {
        "diffEditor.insertedLineBackground": "#14462088",
        "diffEditor.insertedTextBackground": "#1b662ebe",
        "diffEditor.removedLineBackground": "#6F131F88",
        "diffEditor.removedTextBackground": "#a1192bca"
    },
    "workbench.colorTheme": "Monokai Night",
    "workbench.commandPalette.preserveInput": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.openPositioning": "last",
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.editor.restoreViewState": true,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.layoutControl.type": "menu",
    "workbench.productIconTheme": "macos-modern",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile"
}
